#include <iostream>  

constexpr int N_ELEMENTS = 100;

int main()
{
    int *b = new int[NELEMENTS];                           // N_elements a konstans
    std::cout << '1-100 ertekek duplazasa'                 // Nem '', hanem"
    for (int i = 0;)                                       // for ciklus nem helyes
    {
        b[i] = i * 2;
    }
    for (int i = 0; i; i++)
    {
        std::cout << "Ertek:"
    }    
    std::cout << "Atlag szamitasa: " << std::endl;
    int atlag;                                              // atlag=0 ?
    for (int i = 0; i < N_ELEMENTS, i++)                    // ;  hiány
    {
        atlag += b[i]                                       // ; híány
    }
    atlag /= N_ELEMENTS;
    std::cout << "Atlag: " << atlag << std::endl;
    return 0;
}
